[Unit]
Description=tangerine-nest-description
After=network.target

[Service]
WorkingDirectory=/home/tangerine/tangerine-nest
ExecStart=/usr/local/bin/node /home/tangerine/tangerine-nest NODE_ENV=production npm start
Restart=always

User=tangerine
#Group=group

Environment=PATH=/usr/bin:/usr/local/bin
Environment=NODE_ENV=production

[Install]
WantedBy=multi-user.target

